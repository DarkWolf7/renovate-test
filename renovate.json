{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configWarningReuseIssue": false,
  "extends": [ "config:base" ],
  "dependencyDashboard": true,
  "masterIssue": true,
  "masterIssueAutoclose": true,
  "rebaseStalePrs": true,
  "recreateClosed": true,
  "baseBranches": ["main"],
  "ignoreTests": true,
  "docker": {
    "pinDigests": true,
    "packageRules": [
      {
        "groupName": "automerge-docker-patch",
        "groupSlug": "all-docker-patch",
        "major": {
          "automerge": false
        },
        "matchCurrentVersion": "!/^0/",
        "platformAutomerge": true,
        "automerge": true,
        "automergeType": "pr",
        "commitMessageSuffix": "[SECURITY]"
      }
    ]
  },
  "customDatasources": {
    "curl": {
      "defaultRegistryUrlTemplate": "https://git.soma.salesforce.com/pages/monitoring/collection-docs/docs/monitor-your-data/application-performance-monitoring/installation-and-configuration/java-monitoring/requirements",
      "format": "html"
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["custom.curl"],
      "matchPackageNames": ["agent"],
      "extractVersion": "open-telemetry\/opentelemetry-java\/releases\/tag\/v(?<version>.+)$"
    },
    {
      "matchDatasources": ["custom.curl"],
      "matchPackageNames": ["extension"],
      "extractVersion": "salesforce-opentelemetry-exporter-java\/releases\/tag\/v(?<version>.+)$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "datasourceTemplate": "custom.curl",
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
